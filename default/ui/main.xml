<?xml version="1.0" encoding="UTF-8"?>
<themes>
	<!-- Bottom Right Bar with buttons -->
	<theme name="hud-panel" ref="-defaults" allowWildcard="true">
		<param name="background"><image>ui-popup.background</image></param>
		<param name="border"><border>7</border></param>
		<param name="defaultGap"><dimension>5,5</dimension></param>
		<param name="smallGap"><dimension>8,8</dimension></param>
		<param name="mediumGap"><dimension>10,10</dimension></param>
		<param name="largeGap"><dimension>15,15</dimension></param>
		<param name="namedGaps"><map/></param>

		<theme name="hud-item-button" ref="-defaults" allowWildcard="true">
			<param name="font"><font>pb-dark</font></param>
			<param name="border"><border>7,0</border></param>
			<!--<param name="border"><border>0,10</border></param>-->
			<param name="background"><image>ui-button.background</image></param>
			<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
			<!--<param name="maxWidth"><int>35</int></param>
	   		<param name="maxHeight"><int>43</int></param>-->
		</theme>

		<theme name="dialoglayout" ref="-defaults">
			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>5,5</dimension></param>
			<param name="smallGap"><dimension>8,8</dimension></param>
			<param name="mediumGap"><dimension>10,10</dimension></param>
			<param name="largeGap"><dimension>15,15</dimension></param>
			<param name="namedGaps"><map/></param>
			<theme name="label-black" ref="-defaults" allowWildcard="true">
				<param name="font"><font>pb-dark</font></param>
			</theme>
		</theme>
		<theme name="label-black" ref="-defaults" allowWildcard="true">
			<param name="font"><font>pb-dark</font></param>
		</theme>
	</theme>

	<!-- small hud -->
	<theme name="hud-panel-small" ref="-defaults" allowWildcard="true">
		<param name="background"><image>none</image></param>
		<param name="border"><border>5,0,0,5</border></param>
		<param name="defaultGap"><dimension>3,3</dimension></param>
		<param name="smallGap"><dimension>0,0</dimension></param>
		<param name="mediumGap"><dimension>0,0</dimension></param>
		<param name="largeGap"><dimension>0,0</dimension></param>
		<param name="namedGaps"><map/></param>

		<theme name="hud-item-button" ref="-defaults" allowWildcard="true">
			<param name="font"><font>pb-dark</font></param>
			<param name="border"><border>0,0</border></param>
			<!--<param name="border"><border>0,10</border></param>-->
			<param name="background"><image>none</image></param>
			<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
			<!--<param name="maxWidth"><int>35</int></param>
	   		<param name="maxHeight"><int>43</int></param>-->
		</theme>

		<theme name="dialoglayout" ref="-defaults">
			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>5,5</dimension></param>
			<param name="smallGap"><dimension>8,8</dimension></param>
			<param name="mediumGap"><dimension>10,10</dimension></param>
			<param name="largeGap"><dimension>15,15</dimension></param>
			<param name="namedGaps"><map/></param>
			<theme name="label-black" ref="-defaults" allowWildcard="true">
				<param name="font"><font>pb-dark</font></param>
			</theme>
		</theme>
		<theme name="label-black" ref="-defaults" allowWildcard="true">
			<param name="font"><font>pb-dark</font></param>
		</theme>
	</theme>

	<theme name="hud-panel-invis" ref="hud-panel" allowWildcard="true">
		<param name="background"><image>none</image></param>
	</theme>

	<theme name="tm-learn-inner-panel" ref="hud-panel-invis" allowWildcard="true">
		<param name="border"><border>8,5</border></param>
	</theme>

	<theme name="tm-target-inner-panel" ref="hud-panel-invis" allowWildcard="true">
		<theme name="dialoglayout" ref="dialoglayout">
			<param name="border"><border>8,5</border></param>
		</theme>
	</theme>

	<!-- Tooltip Window -->
	<theme name="tooltipwindow" ref="-defaults">
		<param name="background"><image>tooltip-left.background</image></param>
		<param name="border"><border>8,8,12,8</border></param>
		<param name="fadeInTime"><int>250</int></param>
		<param name="overlay"><image>none</image></param>
		<theme name="label" ref="-defaults">
			<param name="font"><font>tooltip-font</font></param>
		</theme>
		<theme name="dialoglayout" ref="-defaults">
			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>5,5</dimension></param>
      <param name="smallGap">
        <dimension>8,8</dimension>
      </param>
      <param name="mediumGap">
        <dimension>10,10</dimension>
      </param>
      <param name="largeGap">
        <dimension>15,15</dimension>
      </param>
      <param name="namedGaps">
        <map/>
      </param>
      <theme name="label" ref="-defaults">
        <param name="font">
          <font>tooltip-font</font>
        </param>
      </theme>
    </theme>
  </theme>

  <!-- Message that pops next to certain widgets to assist user with features + supports markup-->
  <theme name="tooltip-markup" ref="tooltipwindow">
    <theme name="label" ref="label">
      <param name="font">
        <font>tooltip-font-markup</font>
      </param>
    </theme>
  </theme>

  <!-- Message that pops next to certain widgets to assist user with features -->
  <theme name="tooltip-help" ref="tooltipwindow">
    <param name="fadeInTime">
      <int>0</int>
    </param>
  </theme>

  <!-- Buttons used for additional info, used for trade window [ 16x16 only ] -->
  <theme name="tooltip-button" ref="-defaults" allowWildcard="true">
    <param name="font">
      <font>alphabeta</font>
    </param>
    <param name="border">
      <border>7,5</border>
    </param>
		<param name="background"><image>icon4</image></param>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>
	<!-- PC Version of the tooltip -->
	<theme name="tooltip-button2" ref="-defaults" allowWildcard="true">
		<param name="font"><font>alphabeta</font></param>
		<param name="border"><border>7,5</border></param>
		<param name="background"><image>icon3</image></param>
		<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
	</theme>

	<!-- Used for in-game notifications -->
	<theme name="item-widget" ref="resizableframe" allowWildcard="true">
		<param name="border"><border>15</border></param>
		<param name="minWidth"><int>310</int></param>
		<param name="minHeight"><int>120</int></param>
		<param name="maxWidth"><int>500</int></param>
		<param name="background"><image>ui-popup.background</image></param>
		<theme name="item-panel" ref="-defaults" allowWildcard="true">

			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>5,5</dimension></param>
			<param name="smallGap"><dimension>8,8</dimension></param>
			<param name="mediumGap"><dimension>10,10</dimension></param>
			<param name="largeGap"><dimension>15,15</dimension></param>
			<param name="namedGaps"><map/></param>
			<theme name="button" ref="button" allowWildcard="true">
				<param name="background"><image>ui-inputbox-2px-btn.background</image></param>
				<param name="border"><border>5</border></param>
				<param name="font"><font>pb-dark</font></param>
			</theme>
			<theme name="spritelabel" ref="-defaults">
				<param name="font"><font>pb-dark</font></param>
				<param name="border"><border>0,28,0,0</border></param>
				<param name="textAlignment"><enum type="alignment">LEFT</enum></param>
			</theme>
			<theme name="label" ref="-defaults">
				<param name="font"><font>pb-dark</font></param>
				<param name="textAlignment"><enum type="alignment">LEFT</enum></param>
			</theme>
		</theme>
	</theme>

	<!-- progress bar used for various request windows -->
	<theme name="countdown-progressbar" ref="-defaults" allowWildcard="true">
		<param name=""><image>mi-xpbar.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>
</themes>
